@{
    ViewBag.Title = "PointIO - Login";
}

    <div class="panel panel-default">
        <div class="panel-heading">Console Login</div>
        <div class="panel-body">
            <form novalidate class="form-horizontal" action="/Login/Process" method="POST">
                <fieldset>
                    <div class="control-group">
                        <label class="control-label" for="password">E-Mail</label>
                        <div class="controls">
                            <input required data-validation-required-message="E-Mail is required." placeholder="Please enter your email." value="" type="email" class="form-control" id="emailAddress" name="emailAddress">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="password">Password</label>
                        <div class="controls">
                            <input required data-validation-required-message="Password is required." placeholder="Please enter your password." type="password" class="form-control" id="password" name="password">
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="controls">
                            <br /><input class="btn btn-default" type="submit" value="Submit">
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>


    <script>
        $(document).ready(function () {
            $(function () { $("input").not("[type=submit]").jqBootstrapValidation(); });
        });
    </script>
